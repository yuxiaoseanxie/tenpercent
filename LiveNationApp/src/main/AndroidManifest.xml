<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.livenation.mobile.android.na"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- Begin Urban Airship Permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.livenation.mobile.android.na.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.livenation.mobile.android.na.permission.C2D_MESSAGE" />
    <permission
        android:name="com.livenation.mobile.android.na.permission.UA_DATA"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.livenation.mobile.android.na.permission.UA_DATA" />
    <!-- End Urban Airship Permissions -->

    <!-- Begin segment.io Permissions -->
    <!-- Allow you to get LOGCAT information when a crash occurs. -->
    <uses-permission android:name="android.permission.READ_LOGS" />

    <!-- Allow you to see which activity was active when a crash occurs. -->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- Allows location to be tracked. -->
    <!-- android.permission.ACCESS_COARSE_LOCATION already there -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- End segment.io Permissions -->


    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.livenation.mobile.android.na.app.LiveNationApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.livenation.mobile.android.na.ui.HomeActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.livenation.mobile.android.na.ui.ShowActivity"
            android:label="@string/activity_label_show"
            android:launchMode="singleTop" />
        <activity
            android:name="com.livenation.mobile.android.na.ui.VenueActivity"
            android:label="@string/activity_label_venue"
            android:parentActivityName="com.livenation.mobile.android.na.ui.HomeActivity"/>
        <activity
            android:name=".ui.ArtistShowsActivity"
            android:parentActivityName="com.livenation.mobile.android.na.ui.HomeActivity" />
        <activity
            android:name="com.livenation.mobile.android.na.ui.ArtistActivity"
            android:label="@string/activity_label_artist"
            android:parentActivityName="com.livenation.mobile.android.na.ui.HomeActivity" />
        <activity
            android:name="com.livenation.mobile.android.na.ui.FavoriteActivity"
            android:label="@string/activity_label_favorites" />
        <activity android:name="com.livenation.mobile.android.na.ui.TestActivity" />
        <activity
            android:name="com.livenation.mobile.android.na.ui.DebugActivity"
            android:parentActivityName="com.livenation.mobile.android.na.ui.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livenation.mobile.android.na.ui.HomeActivity" />
        </activity>
        <activity
            android:name="com.livenation.mobile.android.na.ui.SsoActivity"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>

        <activity
            android:name="com.livenation.mobile.android.na.ui.LocationActivity"
            android:label="@string/activity_label_location"
            android:parentActivityName="com.livenation.mobile.android.na.ui.HomeActivity" />

        <activity
            android:name="com.livenation.mobile.android.na.ui.SearchActivity"
            android:parentActivityName="com.livenation.mobile.android.na.ui.HomeActivity" />

        <activity
            android:name="com.livenation.mobile.android.na.ui.CitySearchActivity"
            android:parentActivityName="com.livenation.mobile.android.na.ui.LocationActivity" />


        <activity android:name="com.facebook.LoginActivity" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_api_key" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />


        <!-- begin auto-generated activities -->
        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.LoadEventActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.BarcodeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.CaptchaActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.ConfirmActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.EventActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.OrderDetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.OrderHistoryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.PurchaseActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.AccountActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.livenation.mobile.android.ticketing.activities.TMPlusActivity"
            android:screenOrientation="portrait" />
        <!-- end auto-generated activities -->


        <!-- Urban Airship config -->
        <activity android:name="com.livenation.mobile.android.na.notifications.ui.InboxActivity" />
        <activity android:name="com.livenation.mobile.android.na.notifications.ui.MessageActivity" />

        <receiver android:name="com.urbanairship.CoreReceiver" />
        <receiver
            android:name="com.urbanairship.push.GCMPushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="@string/urbanairship_category" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.urbanairship.push.PushService"
            android:label="Push Notification Service" />
        <service
            android:name="com.urbanairship.richpush.RichPushUpdateService"
            android:label="Rich Push Notification Service" />
        <service
            android:name="com.urbanairship.analytics.EventService"
            android:label="Event Service" />

        <provider
            android:name="com.urbanairship.UrbanAirshipProvider"
            android:authorities="@string/urbanairship_authorities"
            android:exported="true"
            android:multiprocess="true"
            android:permission="@string/urbanairship_permission" />

        <receiver android:name="com.livenation.mobile.android.na.notifications.PushReceiver" />
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="864f58eb35b59716829c5ae470eab6feb4f8a1c6" />
    </application>

</manifest>