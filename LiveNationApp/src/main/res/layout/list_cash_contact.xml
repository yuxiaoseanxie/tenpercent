<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/outer_padding">

    <com.livenation.mobile.android.na.ui.views.CircularImageView
        android:id="@+id/list_cash_recipient_photo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@android:drawable/sym_contact_card"
        android:contentDescription="@string/cash_content_description_contact_photo"
        app:border="false"
        app:border_width="0dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/inter_item_padding_medium"
        android:layout_marginRight="@dimen/inter_item_padding_medium"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_cash_recipient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_item_padding_small"
            android:textStyle="bold"
            android:text="@string/mock_artist_title_1"/>

        <TextView
            android:id="@+id/list_cash_recipient_small_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mock_artist_title_1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/list_cash_recipient_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/cash_item_checkmark_off"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/list_cash_recipient_big_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:minWidth="30dp"
        android:padding="@dimen/inter_item_padding_medium"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/square_cash_green"
        android:textSize="15sp"
        android:text="@string/mock_quantity"
        android:visibility="visible"/>

</LinearLayout>