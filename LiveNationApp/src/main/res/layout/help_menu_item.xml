<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/help_menu_item_margin">
    <TextView
        android:layout_marginBottom="@dimen/help_menu_item_margin"
        android:id="@+id/help_menu_item_name"
        android:textAppearance="@style/list_help_menu_item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/help_menu_item_description"
        android:layout_width="wrap_content"
        android:textAppearance="@style/list_help_menu_item_description_text"
        android:layout_height="wrap_content"/>
</LinearLayout>