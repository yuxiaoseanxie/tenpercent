<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/livenation_textfield_activated_holo_light"
    android:focusable="false">

    <EditText
        android:id="@android:id/edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/decorated_edittext_input_margin_right"
        android:background="@null"
        android:focusable="true"
        android:imeOptions="actionDone"
        android:inputType="textAutoCorrect"
        android:singleLine="true" />

    <TextView
        android:id="@android:id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/decorated_edittext_hint_margin_left"
        android:drawableLeft="@drawable/edittext_search"
        android:drawablePadding="@dimen/decorated_edittext_hint_image_padding"
        android:focusable="false"
        android:text="@string/search_input_hint"
        android:textAppearance="@style/decorated_edittext_hint_text" />

    <ImageButton
        android:id="@android:id/button1"
        android:layout_width="@dimen/decorated_edittext_clear_width"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@null"
        android:src="@drawable/edittext_clear_with_padding" />
</FrameLayout>