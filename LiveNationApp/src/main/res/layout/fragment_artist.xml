<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_artist_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/fragment_artist_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_artist_shows_header"
            style="@style/ui_header_top_accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist_all_shows" />

        <LinearLayout
            android:id="@+id/fragment_artist_shows_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <include
            android:id="@+id/fragment_artist_bio_container"
            layout="@layout/sub_artist_bio" />

        <TextView
            android:id="@+id/fragment_artist_youtube_header"
            style="@style/ui_header_top_accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist_youtube" />

        <LinearLayout
            android:id="@+id/fragment_artist_youtube_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>