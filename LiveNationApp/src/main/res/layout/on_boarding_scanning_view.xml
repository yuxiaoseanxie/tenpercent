<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/on_boarding_scanning_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_music_scan"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/on_boarding_scanning_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_scanning_description"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/on_boarding_scanning_imageview"
        android:textAppearance="@style/onboarding_scan_text"
        android:paddingLeft="@dimen/on_boarding_scan_message_padding"/>
</RelativeLayout>