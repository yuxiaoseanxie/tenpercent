<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.mobile.livenation.com.livenationui.view.VerticalDate
        android:id="@+id/list_generic_show_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_large"/>

    <android.mobile.livenation.com.livenationui.view.TransitioningImageView
        android:id="@+id/list_item_show_image"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_alignTop="@id/list_generic_show_date"
        android:layout_marginBottom="@dimen/gap_large"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginEnd="@dimen/gap_medium"
        android:layout_toRightOf="@id/list_generic_show_date"
        android:layout_toEndOf="@id/list_generic_show_date"/>

    <android.mobile.livenation.com.livenationui.view.LayoutedTextView
        android:id="@+id/list_generic_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_generic_show_date"
        android:layout_toRightOf="@id/list_item_show_image"
        android:layout_toEndOf="@id/list_item_show_image"
        android:text="@string/mock_artist_title_1"
        android:maxLines="3"
        android:ellipsize="end"
        android:textAppearance="@style/ln.text.medium.bold"/>

    <TextView
        android:id="@+id/list_generic_show_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_generic_show_title"
        android:layout_alignStart="@id/list_generic_show_title"
        android:layout_below="@id/list_generic_show_title"
        android:text="@string/mock_venue_title_1"
        android:textAppearance="@style/ln.text.small.gray"
        android:maxLines="2"
        android:ellipsize="end"/>

    <View
        android:id="@+id/list_item_show_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_alignLeft="@id/list_item_show_image"
        android:layout_alignStart="@id/list_item_show_image"
        android:layout_below="@id/list_item_show_image"
        android:background="@drawable/ui_underscore_background"/>


</RelativeLayout>