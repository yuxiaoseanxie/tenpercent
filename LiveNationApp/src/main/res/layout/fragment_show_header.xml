<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_show_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fragment_show_frame_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/show_image_foreground">

        <com.livenation.mobile.android.na.ui.views.BottomCroppedImageView
            android:id="@+id/fragment_show_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_page_image_height" />
    </FrameLayout>

    <TextView
        android:id="@+id/fragment_show_artist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fragment_show_frame_foreground"
        android:layout_marginBottom="@dimen/show_artist_title_margin_bottom"
        android:layout_marginLeft="@dimen/show_artist_title_margin_left"
        android:text="@string/mock_placeholder_artist_title_1"
        android:textAppearance="@style/show_artist_title"></TextView>

</RelativeLayout>