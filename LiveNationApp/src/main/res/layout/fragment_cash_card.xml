<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/outer_padding"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/inter_item_padding_large"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/cash_enter_card_text"/>

    <Spinner
        android:id="@+id/fragment_cash_card_issuer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/inter_item_padding_medium"
        android:layout_gravity="center_vertical" />

    <com.livenation.mobile.android.ticketing.widgets.CreditCardEditText
        android:id="@+id/fragment_cash_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:nextFocusForward="@+id/fragment_cash_card_month"
        android:textSize="18sp"
        android:hint="@string/credit_card"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inter_item_padding_medium"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fragment_cash_card_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/card_month_hint"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="number"
            android:nextFocusForward="@+id/edittext_card_year" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:hint="@string/card_month_hint"
            android:text="@string/card_date_separator"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView" />

        <EditText
            android:id="@+id/fragment_cash_card_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/card_year_hint"
            android:imeOptions="actionGo|flagNoExtractUi"
            android:inputType="number"
            android:nextFocusForward="@+id/edittext_firstname" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inter_item_padding_large"
        android:src="@drawable/cash_powered_by"
        android:contentDescription="@string/cash_powered_by"/>

</LinearLayout>