<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:contentDescription="@string/mock_inbox_message"
              android:gravity="center"
              android:orientation="horizontal"
              android:padding="@dimen/gap_smaller">

    <View
        android:id="@+id/unread_indicator"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <CheckBox
        android:id="@+id/message_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/gap_small"
        android:layout_marginStart="@dimen/gap_small"
        android:layout_marginRight="@dimen/gap_smaller"
        android:layout_marginEnd="@dimen/gap_smaller"
        android:button="@drawable/ui_checkbox"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/mock_inbox_message_info"
            android:textAppearance="@style/list_inbox_message_info"/>

        <TextView
            android:id="@+id/message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/mock_inbox_message_title"
            android:textAppearance="@style/list_inbox_message_title"/>

        <TextView
            android:id="@+id/message_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/mock_inbox_message_detail"
            android:textAppearance="@style/list_inbox_message_details"/>
    </LinearLayout>

</LinearLayout>