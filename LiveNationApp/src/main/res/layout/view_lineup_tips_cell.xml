<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineup_list_item_height">

        <TextView
            android:id="@+id/view_lineup_time"
            android:layout_width="@dimen/line_up_time_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginStart="@dimen/widget_margin"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginEnd="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:textAppearance="@style/ln.text.small.gray"/>

    <TextView
        android:id="@+id/view_lineup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/view_lineup_time"
        android:layout_toEndOf="@id/view_lineup_time"
        android:textAppearance="@style/ln.text.small.bold"/>

    <View
        android:id="@+id/view_lineup_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/view_lineup_time"
        android:layout_toEndOf="@id/view_lineup_time"/>

</RelativeLayout>