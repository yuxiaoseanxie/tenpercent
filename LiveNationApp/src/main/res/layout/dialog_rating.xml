<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gap_small"
    android:background="@color/windowBackground">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="@string/rating_dialog_title" />

    <View
        android:id="@+id/view_show_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@drawable/ui_dialog_underscore" />

    <TextView
        android:id="@+id/rating_dialog_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_small"
        android:textAppearance="@style/calendar_dialog_rating_description"/>

    <Button
        android:id="@+id/rating_dialog_rate"
        style="@style/custom_center_container.green"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/gap_small"
        android:text="@string/rating_dialog_rate_us" />

    <Button
        android:id="@+id/rating_dialog_not_now"
        style="@style/custom_center_container.green"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/gap_small"
        android:text="@string/rating_dialog_not_now" />

    <Button
        android:id="@+id/rating_dialog_cancel"
        style="@style/custom_center_container.green"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/gap_small"
        android:text="@string/rating_dialog_dont_ask_again" />

</LinearLayout>
</ScrollView>