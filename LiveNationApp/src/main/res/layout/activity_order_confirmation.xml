<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/confirmation_image_height">

            <com.livenation.mobile.android.na.ui.views.TransitioningImageView
                android:id="@+id/activity_order_confirmation_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff777777"
                android:minHeight="@dimen/confirmation_image_height"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/show_image_foreground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_order_confirmation_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/order_confirmation_header_text_margin_bottom"
                    android:gravity="center"
                    android:text="@string/mock_order_quantity"
                    android:textAppearance="@style/order_confirmation_header_text"
                    android:shadowColor="@color/black"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="7"/>

                <TextView
                    android:id="@+id/activity_order_confirmation_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/gap_small"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@string/mock_order_event_name"
                    android:textAppearance="@style/order_confirmation_header_text.large"
                    android:shadowColor="@color/black"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="7"/>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/activity_order_confirmation_actions_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/inter_item_padding_small"
                    android:text="@string/order_confirmation_cost"
                    android:textAppearance="@style/ln.text.small.bold"/>

                <TextView
                    android:id="@+id/activity_order_confirmation_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/gap_small"
                    android:text="@string/mock_price"
                    android:textAppearance="@style/ln.text.small.gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/inter_item_padding_small"
                    android:text="@string/order_confirmation_number"
                    android:textAppearance="@style/ln.text.small.bold"/>

                <TextView
                    android:id="@+id/activity_order_confirmation_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/gap_small"
                    android:text="@string/mock_artist_title_1"
                    android:textAppearance="@style/ln.text.small.gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/inter_item_padding_small"
                    android:text="@string/order_confirmation_seats"
                    android:textAppearance="@style/ln.text.small.bold"/>

                <TextView
                    android:id="@+id/activity_order_confirmation_seats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/gap_small"
                    android:text="@string/mock_artist_title_1"
                    android:textAppearance="@style/ln.text.small.gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/inter_item_padding_small"
                    android:text="@string/order_confirmation_date"
                    android:textAppearance="@style/ln.text.small.bold"/>

                <TextView
                    android:id="@+id/activity_order_confirmation_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/gap_small"
                    android:text="@string/mock_event_date"
                    android:textAppearance="@style/ln.text.small.gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/inter_item_padding_small"
                    android:text="@string/order_confirmation_venue_name"
                    android:textAppearance="@style/ln.text.small.bold"/>

                <TextView
                    android:id="@+id/activity_order_confirmation_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/gap_small"
                    android:text="@string/mock_venue_title_1"
                    android:textAppearance="@style/ln.text.small.gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/inter_item_padding_small"
                    android:text="@string/order_confirmation_note"
                    android:textAppearance="@style/ln.text.small.bold"/>

                <TextView
                    android:id="@+id/activity_order_confirmation_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_confirmation_note_fmt"
                    android:textAppearance="@style/ln.text.small.gray"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>