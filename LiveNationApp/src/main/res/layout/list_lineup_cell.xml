<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/lineup_list_item_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/view_lineup_time"
            android:layout_width="@dimen/line_up_time_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/widget_margin"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginEnd="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:textAppearance="@style/ln.text.small.gray"/>

    <TextView
        android:id="@+id/view_lineup_title"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/widget_margin"
        android:layout_marginRight="@dimen/widget_margin"

        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:textAppearance="@style/ln.text.small.bold"/>
    </LinearLayout>
    <View
        android:id="@+id/view_lineup_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dotted_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/line_up_margin_left_divider"
        android:layout_marginStart="@dimen/line_up_margin_left_divider"
        android:layerType="software"/>

</RelativeLayout>