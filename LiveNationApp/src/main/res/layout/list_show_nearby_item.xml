<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.livenation.mobile.android.na.ui.views.VerticalDate
        android:id="@+id/list_nearby_show_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_medium"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_large" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_nearby_show_date" />

    <TextView
        android:id="@+id/list_nearby_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_nearby_show_date"
        android:layout_toRightOf="@id/list_nearby_show_date"
        android:text="@string/mock_artist_title_1"
        android:textAppearance="@style/ln.text.medium.bold" />

    <TextView
        android:id="@+id/list_nearby_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_nearby_show_title"
        android:layout_below="@id/list_nearby_show_title"
        android:text="@string/mock_show_time"
        android:textAppearance="@style/ln.text.small.gray" />

    <View
        android:id="@+id/list_nearby_show_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/list_nearby_show_date"
        android:background="@drawable/ui_underscore_background" />

</RelativeLayout>