<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub_update_required_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center"
        style="@style/ui_header_transparent"
        android:text="@string/update_available"/>

    <TextView
        android:id="@+id/sub_update_required_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:textAppearance="@style/ln.text.medium"
        android:text="@string/mock_update_message" />

    <Button
        android:id="@+id/sub_update_required_button"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        style="@style/custom_center_container.green"
        android:text="@string/update_now"/>

    <View style="@style/Divider" />

</LinearLayout>