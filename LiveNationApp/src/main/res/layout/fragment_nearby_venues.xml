<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/fragment_nearby_venues_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.livenation.mobile.android.na.ui.views.EmptyListViewControl
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.livenation.mobile.android.na.ui.views.RefreshBar
        android:id="@+id/fragment_nearby_venues_refresh_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_refresh_bar_margin"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>