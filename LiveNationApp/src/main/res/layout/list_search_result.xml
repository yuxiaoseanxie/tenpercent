<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <com.livenation.mobile.android.na.ui.views.FavoriteCheckBox
        android:id="@+id/list_search_result_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:button="@drawable/checkbox_favorite_padding_selector"
        android:checked="false"
        android:minHeight="@dimen/favorite_checkbox_min_height"
        android:minWidth="@dimen/favorite_checkbox_min_width" />

    <TextView
        android:id="@+id/list_search_result_type_box"
        style="@style/list_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_search_result_margin_top"
        android:layout_toRightOf="@id/list_search_result_checkbox"
        android:text="@string/mock_artist_type" />

    <TextView
        android:id="@+id/list_search_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_search_result_type_box"
        android:layout_marginBottom="@dimen/list_search_result_margin_bottom"
        android:layout_marginLeft="@dimen/list_search_title_margin_left"
        android:layout_toRightOf="@+id/list_search_result_type_box"
        android:text="@string/mock_artist_title_1"
        android:textAppearance="@style/list_search_result_text" />

    <View
        android:id="@+id/list_search_result_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/list_search_result_text"
        android:layout_toRightOf="@id/list_search_result_checkbox"
        android:background="@drawable/ui_underscore_background" />

</RelativeLayout>