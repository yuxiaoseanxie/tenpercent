<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/ui_header_top_accent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/artist_bio" />

    <TextView
        android:id="@+id/fragment_artist_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mock_artist_bio"
        style="@style/ui_long_text"/>

    <TextView
        android:id="@+id/fragment_artist_bio_overflow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ui_overflow"
        android:text="@string/artist_bio_overflow"
        android:textAppearance="@style/view_overflow_text" />

</LinearLayout>