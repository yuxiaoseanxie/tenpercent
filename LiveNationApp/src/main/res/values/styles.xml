<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Actionbar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!-- 
    	Android styles dont support multiple parents, so setting the 
    	ActionBar theme here and not via AppBaseTheme.
     -->
    <style name="AppTheme" parent="Theme.Actionbar">
        <item name="android:editTextBackground">@drawable/livenation_edit_text_holo_light</item>
    </style>

    <style name="LNTheme.NoTitleBar" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

</resources>
