<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ui_header_bottom_accent" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/ui_header_bottom_accent_background</item>
        <item name="android:minHeight">@dimen/ui_header1_min_height</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingTop">@dimen/ui_header1_text_offset_vertical</item>
        <item name="android:textAppearance">@style/ui_header1_text</item>
    </style>

    <style name="ui_header_top_accent" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/ui_header_top_accent_background</item>
        <item name="android:minHeight">@dimen/ui_header1_min_height</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingTop">@dimen/ui_header1_text_offset_vertical</item>
        <item name="android:textAppearance">@style/ui_header1_text</item>
    </style>

    <style name="ui_header2" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:minHeight">@dimen/ui_header1_min_height</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAppearance">@style/ui_header1_text</item>
    </style>

    <style name="ui_header_transparent" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:minHeight">@dimen/ui_header_transparent_min_height</item>
        <item name="android:paddingTop">@dimen/ui_header_transparent_padding_top</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAppearance">@style/ui_header1_text</item>
    </style>

    <style name="ui_header_transparent.with_bottom_padding">
        <item name="android:paddingBottom">@dimen/ui_header_transparent_padding_bottom</item>
    </style>

    <style name="ui_underscore">
        <item name="android:background">@drawable/ui_underscore_background</item>
    </style>

    <style name="ui_lineup">
        <item name="android:paddingTop">@dimen/ui_lineup_padding_top</item>
        <item name="android:paddingBottom">@dimen/ui_lineup_padding_bottom</item>
        <item name="android:layout_marginLeft">@dimen/ui_lineup_margin_left</item>
        <item name="android:layout_marginRight">@dimen/ui_lineup_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/ui_lineup_margin_bottom</item>
    </style>

    <style name="ui_overflow">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/ui_overflow_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/ui_overflow_vertical_padding</item>
        <item name="android:layout_marginBottom">@dimen/ui_overflow_margin_bottom</item>
    </style>

    <style name="ui_long_text">
        <item name="android:padding">@dimen/ui_long_text_padding</item>
        <item name="android:textAppearance">@style/artist_bio</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="favorite_item_checkbox">
        <item name="android:layout_marginLeft">@dimen/ui_lineup_margin_left</item>
    </style>

    <style name="favorite_item_title">
        <item name="android:layout_marginRight">@dimen/favorite_margin_right</item>
    </style>


    <style name="ui_tab" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_actionbar</item>
        <item name="android:minHeight">@dimen/ui_tab_height</item>
    </style>

    <style name="account_google_plus_login_button" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_sso_button_text</item>
        <item name="android:background">@drawable/account_google_plus_sso_button</item>
    </style>

    <style name="account_facebook_login_button" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_sso_button_text</item>
        <item name="android:background">@drawable/account_facebook_sso_button</item>
    </style>

    <style name="list_venue_header_miles">
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/list_venue_header_miles</item>
        <item name="android:textAppearance">@style/list_venue_header_miles_text</item>
    </style>

    <style name="list_search_result_type">
        <item name="android:minWidth">@dimen/list_search_type_min_width</item>
        <item name="android:minHeight">@dimen/list_search_type_min_height</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/list_search_result_type</item>
        <item name="android:textAppearance">@style/list_search_result_type_text</item>
    </style>

    <style name="text.primary.recommendations_upsell_title_text">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="text.secondary.recommendations_upsell_general_text">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text.secondary.recommendations_upsell_discreet_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="text.button.recommendations_upsell">
        <item name="android:layout_marginBottom">@dimen/button_recommendations_upsell_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/button_recommendations_upsell_margin_top</item>
    </style>

    <style name="text.button.recommendations_upsell.facebook">
        <item name="android:background">@drawable/account_facebook_sso_button</item>
    </style>

    <style name="text.button.recommendations_upsell.search">
        <item name="android:background">@drawable/account_google_plus_sso_button</item>
    </style>

    <style name="text.button.custom_center_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="text.button.custom_center_container.red">
        <item name="android:background">@drawable/account_google_plus_sso_button</item>
    </style>

    <style name="text.button.custom_center_container.blue">
        <item name="android:background">@drawable/account_facebook_sso_button</item>
    </style>

    <style name="text.button.custom_center_text">
        <item name="android:drawablePadding">@dimen/recommendations_button_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text.button.custom_center_text.facebook">
        <item name="android:drawableLeft">@drawable/login_facebook_logo</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.button.custom_center_text.search">
        <item name="android:drawableLeft">@drawable/small_white_favorite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.button.custom_center_text.google">
        <item name="android:drawableLeft">@drawable/login_google_plus_logo</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwooshDivider.with_top_margin">
        <item name="android:layout_marginTop">@dimen/swoosh_divider_margin_top</item>
    </style>
</resources>