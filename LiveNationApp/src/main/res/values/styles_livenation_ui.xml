<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ui_header_transparent.with_bottom_padding">
        <item name="android:paddingBottom">@dimen/gap_medium</item>
    </style>

    <style name="ui_long_text">
        <item name="android:padding">@dimen/gap_medium</item>
        <item name="android:textAppearance">@style/ln.text.small</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="favorite_item_checkbox">
        <item name="android:layout_marginLeft">@dimen/gap_small</item>
    </style>

    <style name="account_google_plus_login_button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_sso_button_text</item>
        <item name="android:background">@drawable/account_google_plus_sso_button</item>
    </style>

    <style name="account_facebook_login_button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_sso_button_text</item>
        <item name="android:background">@drawable/account_facebook_sso_button</item>
    </style>

    <style name="list_venue_header_miles">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>

        <item name="android:background">@drawable/list_venue_header_miles</item>
        <item name="android:textAppearance">@style/ln.text.tiny.bold_italic.gray</item>
    </style>

    <style name="SwooshDivider.with_top_margin">
        <item name="android:layout_marginTop">@dimen/gap_large</item>
    </style>

    <style name="ActionBar.Spinner" parent="@android:style/Widget.Holo.Light.Spinner"/>

    <style name="onboarding_sso_button">
        <item name="android:layout_width">@dimen/on_boarding_content_width</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">@dimen/gap_small</item>
        <item name="android:paddingRight">@dimen/gap_small</item>
        <item name="android:drawablePadding">@dimen/gap_smaller</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_sso_button_text</item>
    </style>

    <style name="BottomBarButton.NoBackground" parent="@android:style/Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/color_selector_accent_red</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_bottombar_height</item>
    </style>

</resources>