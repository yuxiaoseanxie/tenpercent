<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ui_header_transparent" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:minHeight">@dimen/ui_header_transparent_min_height</item>
        <item name="android:paddingTop">@dimen/gap_medium</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAppearance">@style/ln.text.small.bold.red.allcaps</item>
    </style>

    <style name="ui_header_transparent.with_bottom_padding">
        <item name="android:paddingBottom">@dimen/gap_medium</item>
    </style>

    <style name="ui_underscore">
        <item name="android:background">@drawable/ui_underscore_background</item>
    </style>



    <style name="ui_long_text">
        <item name="android:padding">@dimen/gap_medium</item>
        <item name="android:textAppearance">@style/ln.text.small</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="favorite_item_checkbox">
        <item name="android:layout_marginLeft">@dimen/gap_small</item>
    </style>

    <style name="favorite_item_title">
        <item name="android:layout_marginRight">@dimen/gap_small</item>
    </style>


    <style name="ui_tab" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_actionbar</item>
        <item name="android:minHeight">@dimen/minimum_pressable</item>
    </style>

    <style name="account_google_plus_login_button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_sso_button_text</item>
        <item name="android:background">@drawable/account_google_plus_sso_button</item>
    </style>

    <style name="account_facebook_login_button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/login_sso_button_text</item>
        <item name="android:background">@drawable/account_facebook_sso_button</item>
    </style>

    <style name="list_venue_header_miles">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>

        <item name="android:background">@drawable/list_venue_header_miles</item>
        <item name="android:textAppearance">@style/ln.text.tiny.bold_italic.gray</item>
    </style>

    <style name="list_search_result_type">
        <item name="android:minWidth">@dimen/ui_gutter_width</item>
        <item name="android:minHeight">@dimen/list_search_type_min_height</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/list_search_result_type</item>
        <item name="android:textAppearance">@style/list_search_result_type_text</item>
    </style>

    <style name="recommendations_upsell_title">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="recommendations_upsell_general">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="recommendations_upsell_discreet_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="recommendations_upsell">
        <item name="android:layout_marginBottom">
            @dimen/gap_tiny
        </item>
        <item name="android:layout_marginTop">@dimen/gap_small</item>
    </style>

    <style name="recommendations_upsell.facebook">
        <item name="android:background">@drawable/account_facebook_sso_button</item>
    </style>

    <style name="recommendations_upsell.search">
        <item name="android:background">@drawable/account_google_plus_sso_button</item>
    </style>

    <style name="custom_center_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="custom_center_container.red">
        <item name="android:background">@drawable/account_google_plus_sso_button</item>
    </style>

    <style name="custom_center_container.blue">
        <item name="android:background">@drawable/account_facebook_sso_button</item>
    </style>

    <style name="custom_center_container.green">
        <item name="android:background">@drawable/button_call_to_action</item>
    </style>

    <style name="custom_center_text" parent="ln.text.small.bold.white">
        <item name="android:drawablePadding">@dimen/gap_smaller</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="custom_center_text.facebook">
        <item name="android:drawableLeft">@drawable/login_facebook_logo</item>
    </style>

    <style name="custom_center_text.search">
        <item name="android:drawableLeft">@drawable/small_white_favorite</item>
    </style>

    <style name="custom_center_text.google">
        <item name="android:drawableLeft">@drawable/login_google_plus_logo</item>
    </style>

    <style name="SwooshDivider.with_top_margin">
        <item name="android:layout_marginTop">@dimen/gap_large</item>
    </style>

    <style name="ActionBar.Spinner" parent="@android:style/Widget.Holo.Light.Spinner" />
</resources>