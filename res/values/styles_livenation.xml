<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="background_gray">#999999</color>
    <color name="featured_text">#ffffff</color>
    <color name="list_show_date_text_highlight">#ff0000</color>
    <color name="show_artist_title">#ffffff</color>
    <color name="view_artist_title">#000000</color>
	<color name="ui_header1_text">#dd1f3b</color>
	<color name="ui_header1_background">#e6e6e6</color>
	<color name="ui_header1_accent">#868686</color>
			
    <style name="livenation_app_text" parent="@android:style/TextAppearance"/>
    
    <style name="featured_see_all" parent="@style/livenation_app_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/featured_text</item>
    </style>

    <style name="featured_title" parent="@style/featured_see_all">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_show_title" parent="@style/livenation_app_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_show_location" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_show_date_dotw" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_show_date_day" parent="@style/livenation_app_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_show_date_text_highlight</item>
    </style>

    <style name="list_show_date_month" parent="@style/livenation_app_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/list_show_date_text_highlight</item>
    </style>

    <style name="show_artist_title" parent="@style/livenation_app_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/show_artist_title</item>
    </style>

    <style name="view_artist_title" parent="@style/livenation_app_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/view_artist_title</item>
    </style>
    
    <style name="ui_header1_text" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ui_header1_text</item>
    </style>

    <!-- View styles -->

</resources>