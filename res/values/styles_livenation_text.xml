<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="livenation_app_text" parent="@android:style/TextAppearance"/>
    
    <style name="featured_see_all" parent="@style/livenation_app_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/featured_text</item>
    </style>

    <style name="featured_title" parent="@style/featured_see_all">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_show_title" parent="@style/livenation_app_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_show_location" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_show_date_dotw" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_show_date_day" parent="@style/livenation_app_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_show_date_text_highlight</item>
    </style>

    <style name="list_show_date_month" parent="@style/livenation_app_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/list_show_date_text_highlight</item>
    </style>

    <style name="show_artist_title" parent="@style/livenation_app_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/show_artist_title</item>
    </style>

    <style name="view_artist_title" parent="@style/livenation_app_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/view_artist_title</item>
    </style>
    
    <style name="ui_header1_text" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ui_header1_text</item>
    </style>

    <style name="show_venue_text" parent="@style/livenation_app_text">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/show_venue_text</item>
    </style>
    
    <style name="show_venue_text_title" parent="@style/show_venue_text">
        <item name="android:textStyle">bold|italic</item>
    </style>
    
    <style name="venue_detail_link_text" parent="@style/livenation_app_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ui_header1_text</item>
    </style>
    
    <style name="venue_detail_text" parent="@style/livenation_app_text">
        <item name="android:textStyle">bold|italic</item>
    </style>
    
    <style name="venue_detail_date_time_text" parent="@style/livenation_app_text">
        <item name="android:textStyle">bold</item>
    </style>  
      
    <style name="view_venue_show_title" parent="@style/livenation_app_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="view_venue_show_time" parent="@style/livenation_app_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/view_venue_show_time</item>
    </style>
    
</resources>