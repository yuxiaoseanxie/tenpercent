<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="background_gray">#999999</color>
    <color name="featured_text">#ffffff</color>
    <color name="list_show_date_text_highlight">#ff0000</color>
    <color name="show_artist_title">#ffffff</color>
    <color name="view_artist_title">#000000</color>

    <style name="featured_title" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/featured_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="featured_see_all" parent="@style/featured_title">
        <item name="android:textStyle"></item>
    </style>

    <style name="list_show_title" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_show_location" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_show_date_dotw" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_show_date_day" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_show_date_text_highlight</item>
    </style>

    <style name="list_show_date_month" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/list_show_date_text_highlight</item>
    </style>

    <style name="show_artist_title" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/show_artist_title</item>
    </style>

    <style name="view_artist_title" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/view_artist_title</item>
    </style>

    <!-- View styles -->

</resources>