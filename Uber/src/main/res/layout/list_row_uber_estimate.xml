<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/uber_list_price_estimate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello 123"
            android:textAppearance="@style/uber_list_text_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uber_list_price_estimate_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="@style/uber_list_text_secondary" />
    </LinearLayout>

    <TextView
        android:id="@+id/uber_list_price_estimate_cost"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/uber_list_text_secondary" />

    <TextView
        android:id="@+id/uber_list_price_estimate_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/uber_list_text_secondary" />

</LinearLayout>