<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appetize_actionbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appetize_actionbar_height</item>
        <item name="android:background">@color/appetize_action_bar_color</item>
    </style>

    <style name="appetize_actionbar_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/appetize_actionbar_logo_marginTB</item>
        <item name="android:layout_marginBottom">@dimen/appetize_actionbar_logo_marginTB</item>
    </style>

    <style name="appetize_actionbar_cart_btn" parent="android:Widget.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/appetize_menu_btn_selector</item>
        <item name="android:src">@drawable/appetize_cart</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:padding">0sp</item> -->
        <item name="android:paddingRight">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="appetize_actionbar_navigation_btn" parent="android:Widget.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/appetize_menu_btn_selector</item>
        
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">visible</item>
    </style>
    
    <style name="appetize_list_item_title" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_toRightOf">@id/logo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appetize_list_item_sub_title" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="appetize_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        

    </style>

    <style name="appetize_wheel_btn" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/appetize_basic_button</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/basic_button_text_color_appetizelibrary</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">@string/appetize_confirm_btn</item>
        
    </style>
    <style name="appetize_separator_text" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="appetize_full_screen_dialog">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>    
	
    
</resources>