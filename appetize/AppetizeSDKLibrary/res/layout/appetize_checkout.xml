<?xml version="1.0" encoding="utf-8"?>

<!--suppress AndroidLintHardcodedText -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d6d6"
     tools:ignore="contentDescription"
     >

 
     
    <RelativeLayout android:id="@+id/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:background="@color/appetize_action_bar_color">
        <ImageView android:layout_alignParentLeft="true"
                   android:layout_marginLeft="18dp"
                   android:layout_height="match_parent"
                   android:layout_width="wrap_content"
                   android:scaleType="center"
                   android:src="@drawable/appetize_cart_title"
                  
                   />
	   
	    <Button android:id="@+id/edit"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="@string/appetize_label_edit_cart"
	        android:textColor="@android:color/white"
	        android:textSize="18sp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:padding="6dp"
	        android:background="@drawable/appetize_right_bar_button"/>
	    <Button android:id="@+id/done"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="@string/appetize_done"
	        android:textColor="@android:color/white"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:padding="6dp"
	        android:visibility="gone"
	        android:background="@drawable/appetize_right_bar_button"/>
    </RelativeLayout>
    <ImageView android:id="@+id/separator1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbar"
        android:background="@drawable/appetize_horizontal_separator"
            android:visibility="gone"
            />
    
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/separator2"
        android:layout_below="@id/actionbar"
        android:cacheColorHint="#00000000"
        android:divider="@color/background_color_appetizelibrary"
        android:background="@color/background_color_appetizelibrary"
        android:dividerHeight="1dp"
        android:fadingEdge="none" >
    </ListView>

    <ImageView android:id="@+id/separator2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/total_layout"
        android:background="@drawable/appetize_horizontal_separator"
            android:visibility="gone"/>
    
    <LinearLayout android:id="@+id/total_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/cart_summary_background_color_appetizelibrary">

        
        
	    <LinearLayout android:id="@+id/promo_layout"
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:visibility="gone"
            android:weightSum="3.0"
            android:gravity="center_vertical"
            android:background="@color/cart_summary_background_color_appetizelibrary"
            >
            
            <LinearLayout android:orientation="vertical"
                
            	 android:layout_height="wrap_content"
            	 android:layout_width="0dp"
                android:layout_weight="2.0"
                >
	        <EditText android:id="@+id/promo_edit_text"
	            android:layout_height="wrap_content"
            	 android:layout_width="wrap_content"
                android:singleLine = "true"
                android:maxLines = "1"
                android:lines = "1"
                android:textCursorDrawable="@null"
	          	android:background="@color/cart_summary_background_color_appetizelibrary"
	           
	            android:textColor="@color/promo_code_text_color_appetizelibrary"
	            android:hint="@string/promo_code_hint_appetizelibrary"
	            android:textColorHint="@color/promo_code_hint_text_color_appetizelibrary"
				
                    />
	        <TextView 
	            android:id="@+id/promo_code_explanation"
	            android:textSize="12sp"
	            android:text="@string/promo_code_explanation_appetizelibrary"
	            android:layout_height="wrap_content"
            	android:layout_width="wrap_content"
            	android:textColor="@color/cart_summary_text_color_appetizelibrary"/>
	        </LinearLayout>
	        
	        <Button android:id="@+id/apply_promo_btn"
		        style="@style/appetize_button"
		        android:background="@color/apply_promo_button_color_appetizelibrary"
	        	android:layout_width="0dp"
                android:layout_weight="1.0"
	        	android:layout_height="wrap_content"
		        
		        android:text="@string/appetize_promo_code_apply_button_text" 
		        android:textSize="14sp"
		        android:textStyle="bold"
				android:textColor="@color/apply_promo_button_text_color_appetizelibrary"
                    />
	    </LinearLayout >

	    <View android:id="@+id/separator_promo"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="@color/cart_summary_separator_color_appetizelibrary"
            android:visibility="gone"
	        />
	    <LinearLayout android:id="@+id/tip_btn_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="49dp"
	        android:weightSum="3.0"
	        android:orientation="horizontal"
            android:background="@android:color/transparent"
                >

		    <Button
		        android:id="@+id/btn_tip_10"
		        style="@style/appetize_button"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1.0"
		        android:background="@android:color/transparent"
		        android:text="10% Tip"
		        android:textColor="@color/tip_button_normal_text_color_appetizelibrary"
		        android:textSize="14sp"
		        tools:ignore="HardcodedText" />

		    <Button
		        android:id="@+id/btn_tip_15"
		        style="@style/appetize_button"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1.0"
		        android:background="@android:color/transparent"
		        android:text="15% Tip"
		        android:textColor="@color/tip_button_normal_text_color_appetizelibrary"
		        android:textSize="14sp"
		        tools:ignore="HardcodedText" />

		    <Button
		        android:id="@+id/btn_tip_20"
		        style="@style/appetize_button"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1.0"
		        android:background="@android:color/transparent"
		        android:text="20% Tip"
		        android:textColor="@color/tip_button_normal_text_color_appetizelibrary"
		        android:textSize="14sp"
		        tools:ignore="HardcodedText" />

	    </LinearLayout>
	    
	  
	    
	    <RelativeLayout android:id= "@+id/layout_discount"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginLeft="22dp"
           
	        >

	        <View android:id="@+id/separator_discount"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@color/cart_summary_separator_color_appetizelibrary"
	        android:visibility="gone"
	        />
	        
	        <TextView android:id="@+id/label_discount"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:gravity="center_vertical"
	            android:textColor="@color/cart_summary_text_color_appetizelibrary"
	            android:text="@string/appetize_checkout_discount_label_text"
	            android:textSize="15sp"
	            
	            />
	        
	        <TextView android:id="@+id/label_discount_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:textAlignment="viewEnd"
	            android:textColor="@color/cart_summary_text_color_appetizelibrary"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:layout_marginRight="18dp"

	            />
	        
	    </RelativeLayout>
	    <View android:id="@+id/separator3"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
            android:background="@color/cart_summary_separator_color_appetizelibrary"/>
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="41dp"
                android:layout_marginLeft="23dp"
                android:background="@color/cart_summary_background_color_appetizelibrary"
                >

            <TextView android:id="@+id/label_total" 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:text="@string/appetize_total"
                android:textColor="@color/cart_summary_text_color_appetizelibrary"
                android:background="@color/cart_summary_background_color_appetizelibrary"/>
            <TextView android:id="@+id/convenience"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/label_total"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/cart_summary_text_color_appetizelibrary"
                android:background="@color/cart_summary_background_color_appetizelibrary"/>
            <TextView android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/cart_summary_text_color_appetizelibrary"
                android:background="@color/cart_summary_background_color_appetizelibrary"/>
        </RelativeLayout>
	    <View android:id="@+id/separator4"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
            android:background="@color/cart_summary_separator_color_appetizelibrary"/>
	    
	    <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="41dp"
                android:layout_marginLeft="23dp"
                android:background="@color/cart_summary_background_color_appetizelibrary"
             >
	        <TextView android:id="@+id/label_seat"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="14sp"
	            android:textColor="@color/cart_summary_text_color_appetizelibrary"
	            android:layout_marginLeft="0dp"
	            android:text="@string/appetize_delivering"
	            android:background="@color/cart_summary_background_color_appetizelibrary"/>
	        <TextView android:id="@+id/seat"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
                android:gravity="center_vertical"
                 android:layout_alignParentRight="true"
                  android:textAlignment="viewEnd"
                  android:layout_marginRight="18dp"
                android:textSize="15sp"
                android:textStyle="bold"
	            android:textColor="@color/cart_summary_text_color_appetizelibrary"
	            android:background="@color/cart_summary_background_color_appetizelibrary"/>
	    </RelativeLayout>
	    <View android:id="@+id/separator5"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
            android:background="@color/cart_summary_separator_color_appetizelibrary"
                android:visibility="gone"/>
	    <LinearLayout android:id="@+id/layout_buttons"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="10dp"
	        android:orientation="horizontal"
	        android:weightSum="2.0"
	        android:background="@color/cart_summary_background_color_appetizelibrary"
	        >



		    <Button android:id="@+id/btn_login"
		        style="@style/appetize_button"
		        android:layout_width="0dp"
		        android:layout_height="45dp"
		        android:layout_weight="1.0"
		        android:background="@drawable/appetize_basic_button"
		        android:textColor="@color/basic_button_text_color_appetizelibrary"
		        android:text="@string/appetize_login" />
		    <Button
		        android:id="@+id/btn_checkout"
		        style="@style/appetize_button"
		        android:layout_height="45dp"
		        android:layout_width="0dp"
		        android:layout_weight="1.0"
		        android:layout_marginLeft="6dp"
		        android:background="@drawable/appetize_basic_button"
		        android:textColor="@color/basic_button_text_color_appetizelibrary"
		        android:text="@string/appetize_checkout" 
		       
		        />
		    
		  	<LinearLayout 
		  	    android:id="@+id/extended_btn_checkout"
		  	    android:background="@drawable/appetize_basic_button"
    			android:layout_width="0dp"
    			android:layout_height="45dp"
    			android:layout_weight="1.0"
    			android:orientation="vertical">
    
    			<TextView
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_marginTop="10dp"
        			android:layout_marginLeft="5dp"
        			android:layout_marginRight="5dp"
        			android:layout_gravity="center_horizontal"
        			android:textSize="12sp"
        			android:text="Checkout with email:"
        			android:background="@android:color/transparent"
        			android:clickable="false"
        			android:textColor="@color/basic_button_text_color_appetizelibrary"
        			/>
    
     
   				<TextView
        			android:id="@+id/extended_checkout_user_email"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_gravity="center_horizontal"
        			android:textSize="8sp"
        			android:layout_marginLeft="5dp"
        			android:layout_marginRight="5dp"
        			android:clickable="false"
        			android:background="@android:color/transparent"
        			android:textColor="@color/basic_button_text_color_appetizelibrary"/>

			</LinearLayout>
		  
	    </LinearLayout>
	    <ImageView 
        	android:id="@+id/powered_by_appetize_badge"
        	android:src="@drawable/appetize_powered_by"
        	android:layout_gravity="right"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
       
        	android:layout_marginRight="5dp"
        	android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@color/background_color_appetizelibrary"
        android:text="@string/appetize_empty_cart"
        android:textColor="@color/cart_summary_text_color_appetizelibrary"
        android:textSize="24sp"
        android:textStyle="bold"
         />

  

    <View android:layout_alignParentLeft="true"
          android:layout_height="match_parent"
          android:layout_width="6dp"
          android:background="@drawable/appetize_cart_left_shadow_gradient"/>
</RelativeLayout>