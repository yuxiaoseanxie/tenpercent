<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/background_color_appetizelibrary">

    <include
        android:id="@+id/actionbar"
        android:layout_alignParentTop="true"
        layout="@layout/appetize_actionbar" 
        />
    
    <!--android:layout_height="362dp"  -->
    <RelativeLayout android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
   
     
        android:background="@color/background_color_appetizelibrary">
        
        <ProgressBar android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"/>
        
        <LinearLayout android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
	        <TextView android:id="@+id/seat_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:layout_marginTop="8dp"
	            android:layout_marginLeft="6dp"
	            android:text="Current Seat: "
	            android:textSize="16sp"
	            android:visibility="gone"/>
			<ImageView android:id="@+id/stadium_image"
	        	android:layout_width="fill_parent"
	        	android:layout_height="145dp"
	        	android:layout_margin="0dp"
	        	android:padding="0dp"
	        	android:background="#cc333333"
	        	android:scaleType="centerCrop"/> <!-- bakcground color is just temp!! -->
		</LinearLayout>
		<RelativeLayout android:id="@+id/stadium_info" 
		    android:layout_width="match_parent"
		    android:minHeight="40dp"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_margin="0dp"
		    android:paddingTop="4dp"
		    android:paddingBottom="4dp"
		    android:paddingLeft="@dimen/appetize_seat_selector_inner_area_marginLR"
		    android:paddingRight="@dimen/appetize_seat_selector_inner_area_marginLR"
		    android:orientation="vertical"
		    android:background="@color/stadium_info_color_appetizelibrary"
		    android:alpha="0.7">
		    <LinearLayout android:id="@+id/name_layout" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_vertical">
				<TextView android:id="@+id/stadium_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="9sp"
			        android:textColor="@color/stadium_info_text_color_appetizelibrary"
			        android:textStyle="bold"
			       />
				<TextView android:id="@+id/distance"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="6dp"
			        android:drawablePadding="4dp"
			        
			        android:textSize="9sp"
			        android:textColor="@color/appetize_green"
			        android:textStyle="bold"
			        />
		    </LinearLayout>
			<TextView android:id="@+id/event"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/name_layout"
		        android:textSize="14sp"
		        android:layout_marginBottom="1dp"
		        
		        android:textColor="@color/stadium_info_text_color_appetizelibrary"/>
		</RelativeLayout>
		<RelativeLayout android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_margin="0dp"
		    android:layout_below="@id/ll"
		    android:background="@android:color/transparent">
			<View android:id="@+id/rule01"
			    android:layout_marginLeft="@dimen/appetize_seat_selector_inner_area_marginLR" 
		    android:layout_marginRight="@dimen/appetize_seat_selector_inner_area_marginLR" 
			    android:layout_width="fill_parent"
			    android:layout_height="40dp"
			    android:background="#ebebeb"/>
			<RelativeLayout android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_below="@id/rule01"
			    android:layout_marginLeft="@dimen/appetize_seat_selector_inner_area_marginLR"
			    android:layout_marginRight="@dimen/appetize_seat_selector_inner_area_marginLR"
			    android:background="@color/wheel_background_color_appetizelibrary">
			</RelativeLayout>
