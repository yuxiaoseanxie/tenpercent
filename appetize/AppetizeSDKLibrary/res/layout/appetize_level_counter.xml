			</RelativeLayout>		
			<LinearLayout android:id="@+id/outer_layout"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="horizontal"
			    >
			    <RelativeLayout android:id="@+id/section_layout"
			        android:layout_width="0dp"
			        android:layout_height="fill_parent"
			        android:layout_weight="1.0"
			        android:orientation="vertical">
					<TextView android:id="@+id/level_title"
					    android:layout_width="fill_parent"
					    android:layout_height="40dp"
					    android:textColor="@color/level_title_text_color_appetizelibrary"
					    android:textSize="14sp"
					    android:text="@string/appetize_select_level"
					    android:gravity="center"
					    android:background="@color/background_color_appetizelibrary"/>
			        <com.appetizeapp.android.wheel.WheelView
			            android:id="@+id/wheel"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_below="@id/level_title"
			            android:layout_gravity="center_vertical"
			            android:layout_marginTop="8dp"
			            android:layout_marginBottom="8dp"/>
			    </RelativeLayout>
			    
			 
			</LinearLayout>
		</RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      
        android:orientation="vertical"
        android:background="@color/background_color_appetizelibrary">
	    <Button
	        android:id="@+id/continueBtn"
	        style="@style/appetize_wheel_btn"
	        android:layout_gravity="center"
	        android:layout_above="@+id/btn_layout"
            android:layout_marginBottom="10dp"
	        android:onClick="onContinueClick" 
	        android:textColor="@color/basic_button_text_color_appetizelibrary"/>
		<LinearLayout android:id="@+id/btn_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal"
	        android:background="@drawable/appetize_menu_footer_bg"
	        android:weightSum="2.0"
	        android:visibility="gone">
	        <ImageButton android:id="@+id/btn_info"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:gravity="center"
	            
	            android:background="@android:color/transparent"/>
	        <ImageView android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:src="@drawable/appetize_food_menu_separator"/>
	        <ImageButton android:id="@+id/btn_seat"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1.0"
	            android:gravity="center"
	            
	            android:background="@android:color/transparent"/>
	    </LinearLayout>

    </LinearLayout>
    
    
