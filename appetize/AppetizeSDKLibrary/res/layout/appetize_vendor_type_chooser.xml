<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
             
              android:background="@color/background_color_appetizelibrary">

    <include
            android:id="@+id/actionbar"
            android:layout_alignParentTop="true"
            layout="@layout/appetize_actionbar" />


    <RelativeLayout android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
					
                    android:layout_height="wrap_content">
        
    </RelativeLayout>


    <ViewSwitcher android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:id="@+id/vendorTypeProgressBarButtonsSwitcher"
                 
                
                  >

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:id="@+id/vendorTypeProgressLayout"
                     android:background="@color/background_color_appetizelibrary"
            >

            <ProgressBar android:layout_width="wrap_content"
                         android:layout_gravity="center"

                     android:layout_height="wrap_content"/>

                     </FrameLayout>



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/vendorTypeButtonLayout"
                android:background="@color/background_color_appetizelibrary"
               >

             <ListView
        android:id="@+id/vendor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
       
        android:cacheColorHint="@color/background_color_appetizelibrary"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        
        />

   
	

        </LinearLayout>
    </ViewSwitcher>



</LinearLayout>