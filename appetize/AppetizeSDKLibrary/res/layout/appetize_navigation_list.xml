<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appetize_menu_bg">
	<ListView android:id="@+id/nav_list" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@+id/appetize_info"
	    android:cacheColorHint="@android:color/transparent"
	    android:dividerHeight="1dp">
	</ListView>
	<ImageButton android:id="@+id/appetize_info"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:paddingTop="6dp" android:paddingBottom="6dp"
	    
	    android:background="@drawable/appetize_menu_btn_selector"/>
	<ImageView android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/appetize_info"
	    android:background="@drawable/appetize_horizontal_separator"/>
</RelativeLayout>
