<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <FrameLayout android:id="@+id/simple_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_layout">
        
    </FrameLayout>
    <LinearLayout android:id="@+id/btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/appetize_menu_footer_bg"
        android:weightSum="3.0">
        <ImageButton android:id="@+id/btn_menu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:src="@drawable/appetize_bottom_food_type_menu_food_normal_image"
            android:background="@android:color/transparent"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/appetize_food_menu_separator"/>
        <ImageButton android:id="@+id/btn_build_drink"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:src="@drawable/appetize_bottom_food_type_menu_build_drink_normal_image"
            android:background="@android:color/transparent"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/appetize_food_menu_separator"/>
        <ImageButton android:id="@+id/btn_merch"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:src="@drawable/appetize_bottom_food_type_menu_merch_normal_image"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>