<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include
        android:id="@+id/actionbar"
        android:layout_alignParentTop="true"
        layout="@layout/appetize_actionbar" />
	<LinearLayout android:id="@+id/layout_text" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/actionbar"
	    android:weightSum="2.0"
	    android:paddingTop="8dp" 
	    android:paddingBottom="8dp"
	    android:orientation="horizontal">
	    <TextView android:id="@+id/label_mixer"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:text="@string/appetize_mixer"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:textStyle="bold"/>
	    <TextView android:id="@+id/label_alcohol"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:text="@string/appetize_alcohol"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:textStyle="bold"/>
	</LinearLayout>
    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/layout_text"
        android:src="@color/appetize_orange" />
    <LinearLayout android:id="@+id/layout_list" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/divider"
	    
	    android:weightSum="2.0"
	    android:paddingTop="8dp" 
	    android:paddingBottom="8dp"
	    android:orientation="horizontal">
	    <ListView android:id="@+id/list_mixer"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1.0"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="2dp"
            android:fadingEdge="none"/>
	    <ListView android:id="@+id/list_alcohol"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1.0"
	        android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="2dp"
            android:fadingEdge="none"/>
	</LinearLayout>
    <Button
        
        android:id="@+id/details_button"
        style="@style/appetize_button"
        android:background="@drawable/appetize_btn_orange"
        android:layout_below="@+id/layout_list"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:onClick="onBottomBtnClick"
        android:text="@string/appetize_btn_add" />
    
     <ImageView 
            android:layout_below="@+id/details_button"
        	android:id="@+id/powered_by_appetize_badge"
        	android:src="@drawable/appetize_powered_by"
        	android:layout_gravity="right"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
       	    android:layout_alignParentBottom="true"
        	android:layout_marginRight="5dp"
        	android:layout_marginBottom="5dp"/>
    
</RelativeLayout>